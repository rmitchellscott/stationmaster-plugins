<div class="view view--half_vertical">
  <div class="layout layout--col">
    <div class="grid grid--cols-2">
      <%= render partial: 'plugins/lunch_money/common/headings', locals: local_assigns.merge(top_items_count: 2) %>
    </div>

    <% chart_opts = { graph_items_count: 16, chart_size: { height: 340 }, series_point_width: 5, y_axis_labels: { style: { fontSize: '16px' } }, tick_amount: 3 } %>
    <%= render partial: 'plugins/lunch_money/common/chart', locals: local_assigns.merge(chart_opts) %>
  </div>

  <%= render 'plugins/lunch_money/common/title_bar', instance_name: instance_name %>
</div>
